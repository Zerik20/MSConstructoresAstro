---
export interface Props {
  imgSrc: string;
  title: string;
  description: string;
  delay: number;
}

const { imgSrc, title, description, delay } = Astro.props;
---

<div 
  class="bg-white shadow-lg rounded-lg overflow-hidden transition transform hover:scale-105 hover:shadow-xl"
  data-aos="fade-up"
  data-aos-delay={delay}
>
  <img src={imgSrc} alt={title} class="w-full h-60 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-800">{title}</h3>
    <p class="mt-3 text-gray-600">
      {description}
    </p>
  </div>
</div>
