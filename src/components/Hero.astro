// HeroComponent.astro
---

<section class="relative h-screen bg-blue-200">
    <!-- Imagen de fondo ocupando toda la pantalla -->
    <div class="absolute inset-0">
      <img src="/img/Hero/Hero.jpg" alt="Grúa de construcción" class="h-full w-full object-cover" />
    </div>
    
    <!-- Oscurece el fondo -->
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  
    <!-- Contenido del Hero, centrado -->
    <div class="relative z-10 flex flex-col justify-center items-center h-full text-center px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl font-bold text-white sm:text-6xl lg:text-7xl">
        Listen better. <br />
        Plan better. <br />
        Build better.
      </h1>
      <p class="mt-4 text-xl text-blue-200 max-w-lg sm:max-w-2xl">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo.
      </p>
      <div class="mt-8">
        <a href="#" class="inline-block px-8 py-3 bg-orange-500 text-white font-semibold rounded-md hover:bg-orange-600">
          Discover More
        </a>
      </div>
    </div>
</section>
